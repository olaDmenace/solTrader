# SolTrader Environment Configuration

# Required - Core Settings
ALCHEMY_RPC_URL=your_alchemy_rpc_url_here
WALLET_ADDRESS=your_wallet_address_here

# Birdeye Trending API (Get from https://birdeye.so/)
BIRDEYE_API_KEY=your_birdeye_api_key_here

# Optional - Notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Optional - Birdeye Configuration
ENABLE_TRENDING_FILTER=true
MAX_TRENDING_RANK=50
MIN_PRICE_CHANGE_24H=20.0
MIN_VOLUME_CHANGE_24H=10.0
MIN_TRENDING_SCORE=60.0
TRENDING_SIGNAL_BOOST=0.5
TRENDING_FALLBACK_MODE=permissive

# Optional - Trading Parameters
PAPER_TRADING=true
INITIAL_PAPER_BALANCE=100.0
MAX_POSITION_SIZE=5.0
STOP_LOSS_PERCENTAGE=0.15
TAKE_PROFIT_PERCENTAGE=0.5