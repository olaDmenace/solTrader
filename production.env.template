# =============================================================================
# SOLTRADER PRODUCTION ENVIRONMENT CONFIGURATION
# Day 14 - Enterprise Production Configuration Template
# =============================================================================

# =============================================================================
# CORE SYSTEM CONFIGURATION
# =============================================================================

# Environment Settings
NODE_ENV=production
PRODUCTION_MODE=true
DEBUG_MODE=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30
LOG_FORMAT=json
ENABLE_STRUCTURED_LOGGING=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Master Encryption Key (CHANGE THIS IN PRODUCTION!)
MASTER_ENCRYPTION_KEY=your-256-bit-encryption-key-here

# API Security
API_RATE_LIMIT_PER_MINUTE=1000
API_TIMEOUT_SECONDS=30
ENABLE_API_KEY_ROTATION=true
API_KEY_ROTATION_HOURS=24

# Network Security
ALLOWED_HOSTS=localhost,127.0.0.1,your-production-domain.com
ENABLE_CORS=false
CORS_ALLOWED_ORIGINS=https://your-trading-dashboard.com

# =============================================================================
# SOLANA BLOCKCHAIN CONFIGURATION
# =============================================================================

# Primary RPC Configuration
ALCHEMY_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
ALCHEMY_WS_URL=wss://solana-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Backup RPC Providers
HELIUS_RPC_URL=https://rpc.helius.xyz/?api-key=YOUR_HELIUS_KEY
QUICKNODE_RPC_URL=https://your-quicknode-endpoint.solana-mainnet.quiknode.pro/YOUR_TOKEN/
GENESYSGO_RPC_URL=https://ssc-dao.genesysgo.net/

# RPC Rate Limiting
MAX_RPC_CALLS_PER_SECOND=50
RPC_RETRY_ATTEMPTS=3
RPC_TIMEOUT_SECONDS=10

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# Main Trading Wallet
WALLET_ADDRESS=YOUR_SOLANA_WALLET_ADDRESS
WALLET_PRIVATE_KEY_ENCRYPTED=YOUR_ENCRYPTED_PRIVATE_KEY

# Multi-Wallet Configuration
MOMENTUM_WALLET_ADDRESS=MOMENTUM_STRATEGY_WALLET_ADDRESS
MEAN_REVERSION_WALLET_ADDRESS=MEAN_REVERSION_STRATEGY_WALLET_ADDRESS
GRID_TRADING_WALLET_ADDRESS=GRID_TRADING_STRATEGY_WALLET_ADDRESS
ARBITRAGE_WALLET_ADDRESS=ARBITRAGE_STRATEGY_WALLET_ADDRESS

# Wallet Security
WALLET_UNLOCK_TIMEOUT_MINUTES=5
ENABLE_HARDWARE_WALLET=false
REQUIRE_TRANSACTION_CONFIRMATION=true

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Trading Mode
PAPER_TRADING=false
LIVE_TRADING=true
ENABLE_EMERGENCY_STOP=true

# Capital Allocation
INITIAL_CAPITAL=1000.00
MOMENTUM_WALLET_CAPITAL=600.00
MEAN_REVERSION_WALLET_CAPITAL=400.00
