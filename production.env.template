# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Optimization
DB_CONNECTION_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30
DB_QUERY_TIMEOUT=10
DB_BATCH_SIZE=100
DB_CHECKPOINT_INTERVAL=1000

# Database Files
RISK_DB_PATH=logs/unified_risk.db
PORTFOLIO_DB_PATH=logs/unified_portfolio.db
