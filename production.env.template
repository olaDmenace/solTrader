ARBITRAGE_WALLET_CAPITAL=200.00

# Risk Management
MAX_POSITION_SIZE=0.25
MAX_DAILY_LOSS=50.00
MAX_PORTFOLIO_RISK=0.15
MAX_DRAWDOWN=0.20
EMERGENCY_LIQUIDATION_THRESHOLD=0.15

# Trading Limits
MAX_TRADES_PER_DAY=100
MAX_TRADES_PER_STRATEGY=25
MIN_TRADE_INTERVAL_SECONDS=30
MAX_CONCURRENT_TRADES=10

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# Jupiter DEX Configuration
JUPITER_API_URL=https://quote-api.jup.ag/v6
JUPITER_RATE_LIMIT_PER_MINUTE=300
JUPITER_TIMEOUT_SECONDS=15

# Solana Tracker Configuration
SOLANA_TRACKER_API_URL=https://api.solanatracker.io
SOLANA_TRACKER_API_KEY=YOUR_SOLANA_TRACKER_KEY
